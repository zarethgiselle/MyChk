<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    tools:context=".SesionFragment"
    android:id="@+id/frameLayout">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:id="@+id/fondo"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/txtName"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_alignStart="@+id/btnRegistrar"
            android:layout_alignParentTop="true"
            android:layout_marginStart="2dp"
            android:layout_marginTop="47dp"
            android:background="#1100"
            android:drawableLeft="@drawable/ic_action_name"
            android:ems="10"
            android:hint="Ingrese su Nombre"
            android:inputType="textPersonName"
            android:layout_alignLeft="@+id/btnRegistrar"
            android:layout_marginLeft="2dp" />

        <EditText
            android:id="@+id/txtNoCell"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="136dp"
            android:layout_marginEnd="74dp"
            android:layout_marginRight="74dp"
            android:background="#1100"
            android:drawableLeft="@drawable/ic_action_cell"
            android:ems="10"
            android:hint="Ingrese su Numero"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/txtUser"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="75dp"
            android:layout_marginRight="75dp"
            android:layout_marginBottom="289dp"
            android:background="#1100"
            android:drawableLeft="@drawable/ic_action_user"
            android:ems="10"
            android:hint="@string/tittle_user"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/txtPwd"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_alignStart="@+id/txtUser"
            android:layout_alignLeft="@+id/txtUser"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginBottom="197dp"
            android:background="#1100"
            android:drawableLeft="@drawable/ic_action_pass"
            android:ems="10"
            android:hint="@string/tittle_pwd"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/btnSesion"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="100dp"
            android:layout_marginRight="100dp"
            android:layout_marginBottom="38dp"
            android:text="@string/tittle_boton" />

        <Button
            android:id="@+id/btnRegistrar"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="75dp"
            android:layout_marginRight="75dp"
            android:layout_marginBottom="101dp"
            android:text="Registrar Usuario" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>