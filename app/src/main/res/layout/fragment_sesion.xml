<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    tools:context=".SesionFragment"
    android:id="@+id/frameLayout">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:id="@+id/fondo"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="205dp"
            android:layout_height="196dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="82dp"
            android:layout_marginLeft="82dp"
            android:layout_marginTop="21dp"
            android:src="@drawable/logo" />

        <EditText
            android:id="@+id/txtUser"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="75dp"
            android:layout_marginRight="75dp"
            android:layout_marginBottom="246dp"
            android:background="#1100"
            android:drawableLeft="@drawable/ic_action_user"
            android:ems="10"
            android:hint="@string/tittle_user"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/txtPwd"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_alignStart="@+id/txtUser"
            android:layout_alignLeft="@+id/txtUser"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginBottom="194dp"
            android:background="#1100"
            android:drawableLeft="@drawable/ic_action_pass"
            android:ems="10"
            android:hint="@string/tittle_pwd"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/btnSesion"
            android:layout_width="200dp"
            android:layout_height="67dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="74dp"
            android:layout_marginRight="74dp"
            android:layout_marginBottom="87dp"
            android:text="@string/tittle_boton" />

        <Button
            android:id="@+id/btnRegistrar"
            android:layout_width="114dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="117dp"
            android:layout_marginRight="117dp"
            android:layout_marginBottom="26dp"
            android:text="@string/tittle_btn_reg" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>